<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textDepotHead"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="@string/product_details"
            android:layout_marginBottom="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="#ffffff">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/name"
            android:id="@+id/textDepotTitleDescription"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textDepotTitle"
            android:layout_column="1"
            android:textSize="15sp"
            android:layout_weight="2"
            android:editable="true" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView8"
            android:layout_column="2"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="#ffffff">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/category"
            android:id="@+id/textDepotCategoryDescription"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textDepotCategory"
            android:layout_column="1"
            android:textSize="15sp"
            android:layout_weight="2" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView9"
            android:layout_column="2"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="#ffffff">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/quantity"
            android:id="@+id/textDepotQuantityDescription"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textDepotQuantity"
            android:layout_column="1"
            android:textSize="15sp"
            android:layout_weight="2"
            android:editable="true" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pcs"
            android:id="@+id/textView7"
            android:layout_column="2"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="#ffffff">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Stan min:"
            android:id="@+id/textDepotMinDescription"
            android:layout_column="0"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/textDepotMin"
            android:layout_column="1"
            android:textSize="15sp"
            android:layout_weight="2"
            android:editable="true" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pcs"
            android:id="@+id/textView6"
            android:layout_column="2"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:baselineAligned="false">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Opis:"
            android:id="@+id/textDepotOpisDescription"
            android:layout_column="0"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textDepotFullDescription"
            android:layout_column="1"
            android:textSize="15sp"
            android:layout_weight="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/actualize"
            android:id="@+id/buttonDepotDetailUpdate"
            android:layout_column="1"
            android:textSize="15sp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1" />
    </TableRow>
</TableLayout>